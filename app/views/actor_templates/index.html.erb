<h1>
  List of all actors
</h1>

<hr>

<form action = "/insert_actor" method="post">
  <div>
    <label for ="name">Name</label>
    <input tpe="text" id="name" name="actor_name">
  </div>
  <div>
    <label for ="dob">Dob</label>
    <input tpe="date" id="dob" name="actor_dob">
  </div>
  <div>
    <label for ="bio">Bio</label>
    <textarea id="bio" name="actor_bio" rows="3"></textarea>
  </div>
  <div>
    <label for ="img">Image</label>
    <input tpe="text" id="img" name="actor_img">
  </div>
  <button type="submit">Create actor</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
